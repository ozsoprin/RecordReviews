@model RecordReviews.Models.Album

@{
    ViewData["Title"] = "Delete";
}
@using System.Globalization

<h1>Delete</h1>

<h3>Are you sure you want to delete this album?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlbumTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlbumTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @{
                var time = Model.ReleaseDate.ToString("g", CultureInfo.CreateSpecificCulture("en-us"));
            }
            @Html.DisplayFor(model => time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvgRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvgRate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PageViews)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PageViews)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AlbumId" />
        <input type="submit" value="Delete" class="btn btn-outline-secondary" />
    </form>
</div>
<div class="mt-2">
    <a class="text-muted" asp-action="Index">Back to Albums</a>
</div>
